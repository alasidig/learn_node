{% extends "base.njk" %}
 {% block content %}

     <h1>Welcome to Tasks Management</h1>
     <a href="/new" class="fab">+</a>
     <div class="task-list">
         {% for task in tasks %}
             <a href="/task/{{ task.id }}">
                 <div class="task {% if task.done %}done{% else %}pending{% endif %}">
                     <h3>{{ task.title |capitalize }}</h3>
                     <img src="{{ task.imageUrl }}" alt="task">
                     <p>{{ task.description }}</p>
                     <p>Created by: {{ task.creator.username }} -  
                       {% if task.isPublic %} Public {% else %} Private{% endif %}</p>
                 </div>
             </a>
         {% endfor %}
     </div>
 {% endblock %}