{% extends "base.njk" %}
{% block content %}

    <div class="task-list">
        <div class="task {% if task.done %}done{% else %}pending{% endif %}">
            <h3>{{ task.title |upper }}</h3>
            <img src="{{ task.imageUrl }}" alt="task">
            <p>{{ task.description }}</p>
            <button
                    class="done-button"
                    onclick="markDone({{ task.id }})"
                    {% if task.done %}disabled{% endif %}
            >Done
            </button>
            <button class="delete-button" onclick="deleteTask({{ task.id }})">Delete</button>
        </div>
    </div>
{% endblock %}